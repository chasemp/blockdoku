{
  "name": "blockdoku-pwa",
  "version": "1.5.0",
  "type": "module",
  "description": "A Progressive Web App for playing Blockudoku with multiple themes and local storage",
  "main": "src/index.html",
  "scripts": {
    "dev": "vite",
    "start": "echo 'Blockdoku PWA will be available at: http://localhost:3456' && npm run dev",
    "prebuild": "node scripts/generate-build-info.js",
    "build": "vite build",
    "postbuild": "node scripts/generate-build-info.js",
    "deploy": "node build-and-deploy.js",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:behavioral": "node tests/behavioral/run-tests.js",
    "test:behavioral:browser": "echo 'Open http://localhost:3456/tests/behavioral/test-runner.html in your browser'",
    "cleanup:assets": "node scripts/cleanup-assets.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "pwa",
    "blockudoku",
    "puzzle",
    "game",
    "progressive-web-app"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^0.17.0"
  },
  "dependencies": {
    "workbox-window": "^7.0.0"
  }
}
