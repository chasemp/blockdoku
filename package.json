{
  "name": "blockdoku-pwa",
  "version": "1.6.8",
  "type": "module",
  "description": "A Progressive Web App for playing Blockudoku with multiple themes and local storage",
  "main": "src/index.html",
  "scripts": {
    "dev": "vite",
    "start": "echo 'Blockdoku PWA will be available at: http://localhost:3456' && npm run dev",
    "prebuild": "node scripts/generate-build-info.js",
    "build": "vite build",
    "postbuild": "node scripts/generate-build-info.js",
    "deploy": "node build-and-deploy.js",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:behavioral": "node tests/behavioral/run-tests.js",
    "test:behavioral:browser": "echo 'Open http://localhost:3456/tests/behavioral/test-runner.html in your browser'",
    "test:critical": "node scripts/pre-commit-tests.js",
    "test:regression": "node scripts/run-regression-tests.js",
    "test:regression:all": "node scripts/run-regression-tests.js --all",
    "test:e2e": "node tests/playwright/run-e2e-tests.js",
    "test:e2e:instructions": "echo 'Open tests/playwright/mcp-playwright-instructions.md for detailed test instructions'",
    "test:e2e:auto": "node tests/playwright/run-mcp-automated.js",
    "test:e2e:execute": "node tests/playwright/auto-execute-mcp.js",
    "test:e2e:direct": "node tests/playwright/run-mcp-direct.js",
    "test:catalog": "node tests/playwright/show-catalog.js",
    "test:mcp:commands": "node tests/playwright/execute-mcp-tests.js",
    "test:mcp:generate": "node tests/playwright/generate-mcp-test.js",
    "test:characterization": "node --experimental-modules tests/characterization/run-characterization-tests.js",
    "test:characterization:watch": "node --experimental-modules tests/characterization/run-characterization-tests.js --watch",
    "cleanup:assets": "node scripts/cleanup-assets.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "pwa",
    "blockudoku",
    "puzzle",
    "game",
    "progressive-web-app"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "vite": "^5.4.20",
    "vite-plugin-pwa": "^0.17.0"
  },
  "dependencies": {
    "workbox-window": "^7.0.0"
  }
}
